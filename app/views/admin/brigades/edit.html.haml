%h1
  Edit Brigade &raquo;
  = @brigade.name

= form_for(@brigade, url: admin_brigade_path(@brigade), html: { class: "form-horizontal" }) do |f|
  = devise_errors_for(@brigade)

  %fieldset
    %legend Basics

    .control-group
      = f.label :name, placeholder: "Name", class: "control-label"
      .controls
        = f.text_field :name, placeholder: "Name", class: "input-block-level"

    .control-group
      = f.label :slug, class: "control-label"
      .controls
        = f.text_field :slug, placeholder: "slug", class: "input-block-level"
        %span.help-block
          Used for the brigade's permalink, i.e.
          = link_to raw("brigades.codeforamerica.org/<strong>san-francisco</strong>"), "/san-francisco"

  %fieldset
    %legend Links

    - links = []
    - links << [ :meetup_url, "Meetup Url" ]
    - links << [ :github_url, "Github Url" ]
    - links << [ :google_group_url, "Google Group Url" ]
    - links << [ :irc_hashtag, "IRC Hashtag" ]
    - links << [ :irc_url, "IRC Url" ]
    - links << [ :twitter_screen_name, "Twitter Screen Name" ]
    - links << [ :twitter_hashtag, "Twitter Hashtag" ]

    - links.each do |link|
      .control-group
        = f.label link.first, placeholder: link.second, class: "control-label"
        .controls
          = f.text_field link.first, placeholder: link.second, class: "input-block-level"

  %fieldset
    %legend Simple Theme

    .control-group
      = f.label :simple_banner_img_url, placeholder: "Banner Image Url", class: "control-label"
      .controls
        = f.text_field :simple_banner_img_url, placeholder: "Banner Image Url", class: "input-block-level"

    .control-group
      = f.label :simple_banner_header, placeholder: "Banner Header", class: "control-label"
      .controls
        = f.text_field :simple_banner_header, placeholder: "Banner Header", class: "input-block-level"

    .control-group
      = f.label :simple_banner_text, placeholder: "Banner Text", class: "control-label"
      .controls
        = f.text_area :simple_banner_text, placeholder: "Banner Text", class: "input-block-level", rows: 5

    .control-group
      = f.label :simple_project_list, placeholder: "Project List", class: "control-label"
      .controls
        = f.text_area :simple_project_list, placeholder: "Project List (separate with newlines, HTML OK)", class: "input-block-level", rows: 5

    .control-group
      = f.label :simple_contact_text, placeholder: "Contact Us Text", class: "control-label"
      .controls
        = f.text_area :simple_contact_text, placeholder: "Contact Us Text (HTML OK)", class: "input-block-level", rows: 5

    .form-actions.clearfix
      = f.button type: "submit", class: "btn btn-large btn-primary"
      = link_to "Cancel", admin_brigades_path, class: "btn btn-large"
