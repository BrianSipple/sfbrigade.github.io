!!!
%html{ lang: "en" }
  %head

    %meta{ :charset => "utf-8"}
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}

    %title= content_for?(:title) ? yield(:title) : "Brigade Framework » Admin"

    %meta{ :content => "", :name => "description"}
    %meta{ :content => "", :name => "author"}

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    = yield(:head)

  %body
    %header.navbar.navbar-inverse.navbar-fixed-top
      %nav.navbar-inner
        .container
          = link_to "Brigade Framework » Admin", root_path, class: "brand"
          %ul.nav.pull-right
            %li= link_to "Admins", admins_path
            %li= link_to "Brigades", brigades_path
            %li= link_to "Logout", destroy_admin_session_path, method: "delete"


    .container
      - flash.each do |name, msg|
        - if msg.is_a?(String)
          %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
            %a.close{"data-dismiss" => "alert"} ×
            = content_tag :div, msg, :id => "flash_#{name}"

      = yield

      %footer