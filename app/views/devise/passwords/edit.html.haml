= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "form-signin" }) do |f|

  %h2.form-signin-heading Change Password

  = devise_errors_for(resource)

  = f.hidden_field :reset_password_token

  = f.password_field :password, placeholder: "Password", class: "input-block-level"
  = f.password_field :password_confirmation, placeholder: "Confirm Password", class: "input-block-level"

  .clearfix
    = f.button "Change Password", type: "submit", class: "btn btn-large btn-primary pull-left"
    = link_to "Sign in", new_session_path(resource_name), class: "signin-secondary-link pull-left"