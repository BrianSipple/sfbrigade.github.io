= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "form-signin" }) do |f|

  %h2.form-signin-heading Reset Password

  = devise_errors_for(resource)

  = f.email_field :email, placeholder: "Email", :autofocus => true, class: "input-block-level"

  = f.button "Send me reset password instructions", type: "submit", class: "btn btn-large btn-primary"